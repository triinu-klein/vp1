			<div class="vertical">
				<P id="modalCaption"></p>
				<img id="modalImage" src="/pics/empty.png" alt="galeriipilt">
			</div>
		</div>
	</dialog>
	<h2>Fotogalerii</h2>
   <div id="gallery" class="gallery">
  
	  <% listData.forEach(function(image){ %>
		<img src="<%= image.href %><%= image.filename %>" alt="<%= image.alt %>" class="thumbs" data-filename="<%=image.fileName%>">
	  <% }); %>
  </div>
</body>
